{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "lint:fix": {
      "cache": true
    },
    "test": {
      "dependsOn": ["^build", "test:!(watch)"],
      "cache": true
    },
    "test:!(watch)": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "test:watch": {
      "dependsOn": ["^build"]
    },
    "testw": {
      "cache": true
    },
    "coverage": {
      "cache": true
    },
    "attw": {
      "dependsOn": ["build"]
    },
    "nx-release-publish": {
      "dependsOn": ["build"]
    }
  },
  "defaultBase": "main",
  "sync": {
    "applyChanges": true
  },
  "release": {
    "projectsRelationship": "independent",
    "versionPlans": true,
    "version": {
      "generatorOptions": {
        "preserveLocalDependencyProtocols": false
      }
    },
    "changelog": {
      "projectChangelogs": true
    }
  },
  "plugins": [
    {
      "plugin": "@nx/next/plugin",
      "options": {
        "startTargetName": "next:start",
        "buildTargetName": "pages:build",
        "devTargetName": "next:dev",
        "serveStaticTargetName": "serve-static"
      }
    },
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "build": true
      }
    }
  ]
}
